<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_relatorio_nome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item_relatorio_uf"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_relatorio_nome" />

    <TextView
        android:id="@+id/item_relatorio_cpf"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_relatorio_uf"/>

    <TextView
        android:id="@+id/item_relatorio_rg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_relatorio_cpf"/>

    <TextView
        android:id="@+id/item_relatorio_nascimento"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_relatorio_rg"/>

    <TextView
        android:id="@+id/item_relatorio_telefone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_relatorio_nascimento"/>

    <TextView
        android:id="@+id/item_relatorio_cadastrado"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_relatorio_telefone" />

</android.support.constraint.ConstraintLayout>